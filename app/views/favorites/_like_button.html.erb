<% if current_user.like?(micropost) %>
    <%= form_with(model: current_user.favorites.find_by(micropost_id: micropost.id),lacal: true,method: :delete) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit "いいね！取り消し",class:"btn btn-danger" %>
    <% end %>
<% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |f| %>
    <%= hidden_field_tag :micropost_id, micropost.id %>
    <%= f.submit "いいね！", class:"btn btn-primary" %>
    <% end %>
<% end %>